<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/univallecaicedonia">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"/>

                    <!--  android:src="@drawable/icon"-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIENESTAR UNIVERSITARIO"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margenArribalinearBienestar"
                    android:layout_marginLeft="@dimen/marIzqLinerarCardView"
                    android:layout_marginRight="@dimen/marDereLinearCarview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/AltodeLascardView"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/marAbajoEntreCadaCardView">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/marginSeparadorCardview"
                            app:cardCornerRadius="@dimen/bordeDeCardView">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imagenView1"
                                    android:layout_width="80dp"
                                    android:layout_height="65dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/teatro" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imagenView1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Cultura"
                                    android:textSize="16sp">

                                </TextView>

                                <Button
                                    android:id="@+id/buttonArte"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"/>

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/marginSeparadorCardview"
                            app:cardCornerRadius="@dimen/bordeDeCardView">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imagenView2"
                                    android:layout_width="80dp"
                                    android:layout_height="65dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/atletismo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imagenView2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Dorte"
                                    android:textSize="16sp">

                                </TextView>

                                <Button
                                    android:id="@+id/buttonDeporte"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/AltodeLascardView"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/marginSeparadorCardview"
                            app:cardCornerRadius="@dimen/bordeDeCardView"
                            android:elevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imagenView3"
                                    android:layout_width="80dp"
                                    android:layout_height="65dp"
                                    android:src="@drawable/exitoacademico"
                                    android:layout_centerInParent="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Éxito Académico"
                                    android:textSize="16sp"
                                    android:layout_below="@+id/imagenView3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp">

                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/buttonExitoacademiuco"
                                    android:background="@android:color/transparent"/>

                            </RelativeLayout>



                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/marginSeparadorCardview"
                            app:cardCornerRadius="@dimen/bordeDeCardView"
                            android:elevation="8dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imagenView4"
                                    android:layout_width="80dp"
                                    android:layout_height="65dp"
                                    android:src="@drawable/diversidadygenero"
                                    android:layout_centerInParent="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Diversidad y género"

                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_below="@+id/imagenView4"

                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp">



                                </TextView>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/btndiversidadygenero"
                                    android:background="@android:color/transparent"/>

                            </RelativeLayout>



                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>